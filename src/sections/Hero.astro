---
import background from "../assets/HeroBackground.jpg";
// import CardQuotes from "../components/CardQuotes.astro";
---

<section id="Hero" style={`background-image:url(${background})`}>
    <div class="title">
        <h1>Julio Santacruz <span class="text-gradient">WebDev</span></h1>
        <p>HTML • CSS • Javascript • React • Django • Postgresql</p>
    </div>
    <div class="quotes">
        <!-- <CardQuotes/> -->
    </div>
</section>

<style>
    section {
        height: 100vh;
        width: 100vw;
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
    .title {
        position: relative;
        top: 30%;
        width: 55%;
        margin: auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        background-color: rgba(150, 150, 150, 0.6);
        border-radius: 30px;
    }
    h1 {
        font-size: 40px;
        margin: 20px 0 10px 0;
        color: aliceblue;
    }
    p {
        font-size: 20px;
        margin: 10px 0 20px 0;
        font-weight: 600;
    }
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
    }

    @media screen and (max-width: 1024px) {
        .title {
            width: 60%;
        }
    }

    @media screen and (max-width: 768px) {
        .title {
            width: 80%;
            padding: 10px;
            border-radius: 10px;

        }
    }

    @media screen and (max-width: 425px) {
        .title {
            width: 80%;
            border-radius: 20px;
            padding: 20px;
        }
        h1 {
            font-size: 1.6rem;
            margin: 20px 0 10px 0;
            color: aliceblue;
        }
        p {
            font-size: 18px;
            margin: 10px 0 20px 0;
            padding: 0 20px;
            text-align: center;
            font-weight: 500;
        }
    }
    @media screen and (max-width: 320px) {
        .title {
            width: 80%;
            border-radius: 20px;
            padding: 10px;
        }
        h1 {
            font-size: 22px;
            
        }
        p {
            font-size: 16px;
           
        }
    }
</style>
