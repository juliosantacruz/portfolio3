---
import Layout from "../layouts/Layout.astro";

import image404 from "../assets/404Image.svg";
---

<Layout title="404 Not Found">
    <main>
        <section>
            <img src={image404} alt="" />
            <a href="/portfolio3/">Regresar</a>

            <p>Pagina no encontrada :/</p>
        </section>
    </main>
</Layout>

<style>
    section {
        height: 100vh;
        width: 100vw;
        display: flex;
        flex-direction: column-reverse;
        align-items: center;
        justify-content: center;
    }
    img {
        width: 300px;
    }
    p {
        font-size: 40px;
        margin: 20px 0;
    }
    a {
        margin: 50px 0;
        width: 200px;
        height: 40px;
        border-radius: 10px;
        background: #6200ff;
        text-align: center;
        line-height: 40px;
        text-decoration: none;
        color: aliceblue;
        font-size: 20px;
    }
</style>
